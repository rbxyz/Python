maiusculas='hello world'.upper()
#caixa alta
print(maiusculas)

minisculas='hello world'.lower()
#caixa baixa
print(minisculas)

diiv='hello world'.split()
#divide uma string nos espaços em branco
print(diiv)

diiv_especific='hello world'.split('w')
#retira essa letra especifiicamente (ela diferencia up and low letter)
print(diiv_especific)
